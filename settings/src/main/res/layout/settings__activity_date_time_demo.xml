<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="test.com.settings.ui.DateTimeDemoActivity">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_server_time_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings__server_time" />

        <TextView
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:id="@+id/txt_server_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/txt_server_time_key"
            android:text="12"
            android:textColor="@color/colorAccent" />

        <Button
            android:textSize="12sp"
            android:layout_marginLeft="28dp"
            android:layout_centerVertical="true"
            android:id="@+id/btn_date"
            android:text="日期"
            android:layout_toRightOf="@+id/txt_server_time_value"
            android:layout_width="36dp"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:id="@+id/btn_date_time"
            android:text="时间"
            android:layout_toRightOf="@+id/btn_date"
            android:layout_width="36dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings__sys_time" />

        <TextView
            android:id="@+id/text_sys_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-12-22 10:22:22" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings__standard_time" />

        <TextView
            android:id="@+id/text_standard_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-12-22 10:22:22" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings__beijing_time" />

        <TextView
            android:id="@+id/text_beijing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-12-22 10:22:22" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings__dongjing_time" />

        <TextView
            android:id="@+id/text_dongjing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-12-22 10:22:22" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/settings__tanxiangshan" />

        <TextView
            android:id="@+id/text_tanxiangshan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-12-22 10:22:22" />
    </RelativeLayout>


</LinearLayout>
